	  </feature>
        </alt>
      </and>
    </and>
  </struct>
  <constraints>
    <rule>
      <imp>
        <var>HCP module</var>
        <var>Bluetooth</var>
      </imp>
    </rule>
    <rule>
      <imp>
        <conj>
          <var>HCP module</var>
          <var>database</var>
        </conj>
        <var>single sensor</var>
      </imp>
    </rule>
    <rule>
