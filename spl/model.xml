      </eq>
    </rule>
    <rule>
      <eq>
        <var>website</var>
        <disj>
          <var>HCP website</var>
          <var>Dometic website</var>
        </disj>
      </eq>
    </rule>
    <rule>
      <imp>
        <var>HCP module</var>
        <conj>
          <not>
            <var>demo mode</var>
          </not>
          <conj>
            <not>
              <var>user management</var>
            </not>
            <conj>
              <not>
                <var>backup</var>
              </not>
              <conj>
                <not>
                  <var>uninstall</var>
                </not>
                <not>
                  <var>API</var>
                </not>
              </conj>
            </conj>
          </conj>
        </conj>
      </imp>
    </rule>
    <rule>
      <imp>
        <var>website</var>
        <conj>
          <var>HCP module</var>
          <conj>
            <var>database</var>
            <conj>
              <var>Android</var>
              <var>Windows</var>
            </conj>
          </conj>
        </conj>
      </imp>
    </rule>
